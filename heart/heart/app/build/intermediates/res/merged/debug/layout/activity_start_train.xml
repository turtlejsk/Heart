<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a12146325.heart.StartTrain">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Practice Name"
        android:id="@+id/prac"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Number"
        android:textSize="30dp"
        android:id="@+id/setnum"
        android:layout_below="@+id/prac"
        android:layout_centerHorizontal="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/hr1"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/col1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/hr2"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/hr1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="50dp"
        android:id="@+id/col1"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/min1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/min1"
        android:textSize="50dp"
        android:layout_alignLeft="@+id/pause"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/min2"
        android:textSize="50dp"
        android:layout_toRightOf="@+id/min1"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="50dp"
        android:id="@+id/col2"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/min2"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/sec1"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/col2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/sec2"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/sec1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/pause"
        android:onClick="on"
        android:layout_above="@+id/check"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check HeartRate"
        android:id="@+id/check"
        android:onClick="on"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:onClick="on"
        android:id="@+id/start"
        android:layout_alignTop="@+id/pause"
        android:layout_toStartOf="@+id/pause" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish set"
        android:id="@+id/finish"
        android:onClick="on"
        android:layout_alignTop="@+id/pause"
        android:layout_toEndOf="@+id/pause" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="list"
        android:id="@+id/trlist"
        android:onClick="onClick"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
