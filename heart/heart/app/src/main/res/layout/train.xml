<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Running"
        android:textSize="30dp"
        android:id="@+id/running"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cycle"
        android:textSize="30dp"
        android:id="@+id/cycle"
        android:layout_below="@+id/running"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Boxing"
        android:textSize="30dp"
        android:id="@+id/boxing"
        android:layout_below="@+id/cycle"
        android:layout_alignParentStart="true" />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Golf"
        android:textSize="30dp"
        android:id="@+id/golf"
        android:layout_below="@+id/boxing"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:id="@+id/set"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="set"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        android:inputType="number"
        android:id="@+id/runningset"
        android:layout_alignTop="@+id/running"
        android:layout_toEndOf="@+id/running"
        android:visibility="invisible"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="number"
        android:textSize="30dp"
        android:id="@+id/cycleset"
        android:layout_alignTop="@+id/cycle"
        android:layout_toEndOf="@+id/cycle"
        android:visibility="invisible"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="number"
        android:textSize="30dp"
        android:id="@+id/boxingset"
        android:layout_alignTop="@+id/boxing"
        android:layout_toEndOf="@+id/boxing"
        android:visibility="invisible"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:inputType="number"
        android:textSize="30dp"
        android:id="@+id/golfset"
        android:layout_alignTop="@+id/golf"
        android:layout_toEndOf="@+id/golf"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/runningset"
        android:layout_alignTop="@+id/runningset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:visibility="invisible"
        android:textSize="30dp"
        android:id="@+id/textView3"
        android:layout_toRightOf="@+id/cycleset"
        android:layout_alignTop="@+id/cycleset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:textSize="30dp"
        android:visibility="invisible"
        android:id="@+id/textView4"
        android:layout_toRightOf="@+id/boxingset"
        android:layout_alignTop="@+id/boxingset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:textSize="30dp"
        android:visibility="invisible"
        android:id="@+id/textView5"
        android:layout_toRightOf="@+id/golfset"
        android:layout_alignTop="@+id/golfset" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Select Your Exercise"
        android:id="@+id/textView6"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
